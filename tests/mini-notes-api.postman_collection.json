{
  "info": {
    "name": "Mini Notes API",
    "description": "RESTful API for Mini Notes PWA - Complete testing collection for all notes endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "mini-notes-api-v1",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Notes",
      "item": [
        {
          "name": "Get All Notes",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/notes",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notes"]
            },
            "description": "Retrieve all notes. Supports filtering by category, pinned status, and search."
          },
          "response": []
        },
        {
          "name": "Get All Notes (with filters)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/notes?category=personal&isPinned=true&sortBy=createdAt&order=desc",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notes"],
              "query": [
                {
                  "key": "category",
                  "value": "personal",
                  "description": "Filter by category"
                },
                {
                  "key": "isPinned",
                  "value": "true",
                  "description": "Filter by pinned status"
                },
                {
                  "key": "sortBy",
                  "value": "createdAt",
                  "description": "Sort field (createdAt, updatedAt, title)"
                },
                {
                  "key": "order",
                  "value": "desc",
                  "description": "Sort order (asc, desc)"
                }
              ]
            },
            "description": "Get all notes with query filters applied"
          },
          "response": []
        },
        {
          "name": "Search Notes",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/notes?search=shopping",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notes"],
              "query": [
                {
                  "key": "search",
                  "value": "shopping",
                  "description": "Search term for title and content"
                }
              ]
            },
            "description": "Search notes by title or content"
          },
          "response": []
        },
        {
          "name": "Get Single Note",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/notes/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notes", "1"]
            },
            "description": "Retrieve a specific note by ID"
          },
          "response": []
        },
        {
          "name": "Create Note",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Shopping List\",\n  \"content\": \"- Milk\\n- Eggs\\n- Bread\\n- Butter\",\n  \"category\": \"personal\",\n  \"color\": \"#FFE5B4\",\n  \"isPinned\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/notes",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notes"]
            },
            "description": "Create a new note with title, content, and optional metadata"
          },
          "response": []
        },
        {
          "name": "Create Note (Minimal)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Quick Note\",\n  \"content\": \"Just a simple note without extra fields\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/notes",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notes"]
            },
            "description": "Create a note with only required fields"
          },
          "response": []
        },
        {
          "name": "Create Note (Work Category)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Meeting Notes\",\n  \"content\": \"Discussed project timeline and deliverables\\n\\n## Action Items\\n- Review design mockups\\n- Update documentation\\n- Schedule follow-up meeting\",\n  \"category\": \"work\",\n  \"color\": \"#E3F2FD\",\n  \"isPinned\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/notes",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notes"]
            },
            "description": "Create a work-related note with markdown content"
          },
          "response": []
        },
        {
          "name": "Update Note",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Shopping List\",\n  \"content\": \"- Milk\\n- Eggs\\n- Bread\\n- Butter\\n- Coffee\",\n  \"isPinned\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/notes/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notes", "1"]
            },
            "description": "Update an existing note. All fields are optional."
          },
          "response": []
        },
        {
          "name": "Update Note (Partial)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"isPinned\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/notes/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notes", "1"]
            },
            "description": "Update only specific fields of a note"
          },
          "response": []
        },
        {
          "name": "Delete Note",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/notes/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notes", "1"]
            },
            "description": "Permanently delete a note by ID"
          },
          "response": []
        }
      ],
      "description": "All CRUD operations for managing notes"
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        },
        "description": "Check if the API server is running"
      },
      "response": []
    }
  ]
}
